<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--LOGIN TEXT FOR EDITTEXT-->
    <style name="TextForEditTextLogin">
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:color">#9E9E9E</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">Muli</item>
    </style>


    <!--BUTTON TEXT-->
    <style name="TextForButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--TOOLBAR TITLE-->
    <style name="TitleToobar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="TitleBoldToobar">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <!--EXPANDABLE LISTVIEW-->
    <style name="TitleGroupTask">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Ancuu</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TitleChildTask">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--Text SETTINGS-->
    <style name="TitleSettings">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="TextChildeSettings">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--DIALOG TEXT-->
    <style name="TextButtonDialog">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">Ancuu</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!--TEXT TITLE TASKS-->
    <style name="TitleTasks">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextTimeTasks">
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:padding">3dp</item>
    </style>

    <!--TEXT INFO TASKS-->
    <style name="TextInfoTasks">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


</resources>
